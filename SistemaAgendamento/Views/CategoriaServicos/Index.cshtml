<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div id="ModalCategoria" class="modal-content">
        </div>
    </div>
</div>
<div class="envelope-pesquisa">
    <h3 class="titulopagina">Categoria de Serviços</h3>
    <div class="box-pesquisa">
        <div class="row">
            <div class="col-lg-4">                
                    <button name="BtnNovaCategoria" class="btn btn-default btn-i" type="button">
                        <i class="fa fa-plus"></i>Nova Categoria
                    </button>                
            </div>
            <div class="col-lg-8">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Pesquisar Categoria...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div id="TabelaCategoria" class="row">
        <table class="table table-striped .table-responsive">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="CorpoTabelaCategoria"></tbody>
        </table>
    </div>
</div>
<script type="text/x-handlebars" id="TemplateTabelaCategoria">
    {{#Categoria}}
    <tr>
        <td class="hidden" id="{{a005_id}}"></td>
        <td>{{a005_nome}}</td>
        <td>
            <span name="EditarCategoria" class="btn btn-xs btn-warning">
                <i class="fa fa-pencil"></i>
            </span>
            <span name="ExcluirCategoria" class="btn btn-xs btn-danger">
                <i class="fa fa-times"></i>
            </span>
        </td>
    </tr>
    {{/Categoria}}
    {{^Categoria}}
    <h3>Não existem categorias geradas!</h3>
    {{/Categoria}}
</script>
<script src="~/Scripts/Site/CategoriaServicos/Index.js" type="text/javascript"></script>
<script src="~/Scripts/Site/CategoriaServicos/Adicionar.js" type="text/javascript"></script>
<script src="~/Scripts/Site/CategoriaServicos/Editar.js" type="text/javascript"></script>