<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Novo Cliente</h4>
</div>
<div class="modal-body">
    <form id="FormAdicionaCliente">
        <div class="form-group">
            <label>Nome</label>
            <input name="NomeCliente" type="text" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Telefone</label>
            <input name="NumTelefoneCliente" type="text" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input name="EmailCliente" type="text" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Endereço</label>
            <input name="Rua" type="text" class="form-control" required />
        </div>
        <button class="hidden" name="SalvarCliente" type="submit"></button>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
    <button name="BtnAdicionaCliente" class="btn btn-success">
        <i class="fa fa-check"></i>Adicionar
    </button>
</div>

