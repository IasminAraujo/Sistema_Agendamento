<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div id="ModalCliente" class="modal-content">
        </div>
    </div>
</div>
<div class="envelope-pesquisa">
    <h3 class="titulopagina">Clientes</h3>
    <div class="box-pesquisa">
        <div class="row">
            <div class="col-lg-4">
                <button name="BtnNovoCliente" class="btn btn-default btn-i" type="button">
                    <i class="fa fa-plus"></i>Novo Cliente
                </button>
            </div>
            <div class="col-lg-8">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Pesquisar Cliente...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div id="TabelaClientes" class="row">
        <table class="table table-striped .table-responsive">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Endereço</th>
                    <th>Telefone</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="CorpoTabelaClientes"></tbody>
        </table>
    </div>
</div>
<script type="text/x-handlebars" id="TemplateTabelaClientes">
    {{#Cliente}}
    <tr>
        <td class="hidden" id="{{a004_id}}"></td>
        <td>{{a004_nome}}</td>
        <td>{{a004_email}}</td>
        <td>{{a004_endereco}}</td>
        <td>{{a004_telefone}}</td>
        <td>
            <span name="AgendarCliente" class="btn btn-xs btn-info">
                <i class="fa fa-calendar"></i>
            </span>
            <span name="EditarCliente" class="btn btn-xs btn-warning">
                <i class="fa fa-pencil"></i>
            </span>
            <span name="ExcluirCliente" class="btn btn-xs btn-danger">
                <i class="fa fa-times"></i>
            </span>
        </td>
    </tr>
    {{/Cliente}}
    {{^Cliente}}
    <h3>Não existem clientes gerados!</h3>
    {{/Cliente}}
</script>
<script src="~/Scripts/Site/Clientes/Index.js" type="text/javascript"></script>
<script src="~/Scripts/Site/Clientes/Adicionar.js" type="text/javascript"></script>
<script src="~/Scripts/Site/Clientes/Editar.js" type="text/javascript"></script>
<script src="~/Scripts/Site/Clientes/Excluir.js" type="text/javascript"></script>
<script src="~/Scripts/Site/Clientes/Agendar.js" type="text/javascript"></script>