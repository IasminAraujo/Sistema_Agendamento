<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div id="ModalPacote" class="modal-content">
        </div>
    </div>
</div>
<div class="envelope-pesquisa">
    <h3 class="titulopagina">Pacotes</h3>
    <div class="box-pesquisa">
        <div class="row">
            <div class="col-lg-4">
                <button name="BtnNovoPacote" class="btn btn-default btn-i" type="button">
                    <i class="fa fa-plus"></i>Novo Pacote
                </button>
            </div>
            <div class="col-lg-8">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Pesquisar Pacote...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div id="TabelaPacotes" class="row">
        <table class="table table-striped .table-responsive">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Serviço</th>
                    <th>Quantidade Sessão</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="CorpoTabelaPacotes"></tbody>
        </table>
    </div>
</div>
<script type="text/x-handlebars" id="TemplateTabelaPacotes">
    {{#Pacote}}
    <tr>
        <td class="hidden" id="{{a007_id}}"></td>
        <td>{{a005_nomecategoria}}</td>
        <td>{{a006_nomeservico}}</td>
        <td>{{a007_quantsessao}}</td>
        <td>{{a007_valorpacote}}</td>
        <td>
            <span name="EditarPacote" class="btn btn-xs btn-warning">
                <i class="fa fa-pencil"></i>
            </span>
            <span name="ExcluirPacote" class="btn btn-xs btn-danger">
                <i class="fa fa-times"></i>
            </span>
        </td>
    </tr>
    {{/Pacote}}
    {{^Pacote}}
    <h3>Não existem pacotes gerados!</h3>
    {{/Pacote}}
</script>
<script src="~/Scripts/Site/PacoteServicos/Index.js" type="text/javascript"></script>
<script src="~/Scripts/Site/PacoteServicos/Adicionar.js" type="text/javascript"></script>